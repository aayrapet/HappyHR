# ── AI Keys ──────────────────────────────────────────────────────────────────
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ── Google Cloud (Speech-to-Text fallback) ────────────────────────────────────
GOOGLE_CLOUD_PROJECT=your_gcloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# ── SMTP (email notifications) ────────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user@example.com
SMTP_PASSWORD=your_smtp_password

# ── App Config ────────────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
DATABASE_URL=sqlite+aiosqlite:///./happyhr.db
SCORING_MODEL=gemini-2.5-flash

# ── STT Config ────────────────────────────────────────────────────────────────
STT_MODEL=latest_short
STT_LANGUAGE_CODE=en-US
STT_LOCATION=eu

# ── Feature Flags ─────────────────────────────────────────────────────────────
ENABLE_LIVE_MEMORY_SCORING=true
ENABLE_STT_FALLBACK=false
LIVE_MEMORY_MIN_EVENTS=0
LIVE_MEMORY_FUNCTION_CALL_MODE=ANY
PYTHONUNBUFFERED=1
